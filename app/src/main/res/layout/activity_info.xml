<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_info"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versione 1.0"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        />




        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/sviluppatore"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="29dp"
            android:layout_below="@id/image_info"
            />


    <TextView
        android:id="@+id/sviluppatore1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sviluppatori"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="19dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@+id/image_info"
        />

    <TextView
        android:id="@+id/sviluppatore2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maurizio Minieri"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
android:layout_below="@id/sviluppatore1"
        />

    <TextView
        android:id="@+id/sviluppatore3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alessio Spina"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/sviluppatore2"
        />

    <TextView
        android:id="@+id/sviluppatore4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alessandro Polese"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/sviluppatore3"
        />

    <TextView
        android:id="@+id/sviluppatore5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fortunato Polverino"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/sviluppatore4"
        />


    <ImageView
        android:id="@+id/image_privacy"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/privacy"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/sviluppatore5"
        />

    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@id/sviluppatore5"
        />

    <TextView
        android:id="@+id/privacy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clicca qui per leggere la politica sulla privacy"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/privacy"
        />

    <ImageView

        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/copyright"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/privacy2"
        />

    <TextView
        android:id="@+id/copyright1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copyright"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_below="@id/privacy2"
        />

    <TextView
        android:id="@+id/copyright2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tutti i diritti d'autore appartengono ai rispettivi proprietari"
        android:textColor="#000000"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/copyright1"
        android:layout_marginBottom="20dp"
        />



</RelativeLayout>
    </LinearLayout>
</ScrollView>